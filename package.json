{
  "name": "mcp-script",
  "version": "0.1.0",
  "description": "A scripting language for building agentic workflows with native Model Context Protocol (MCP) support",
  "author": "Kun Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/atinylittleshell/mcp-script.git"
  },
  "homepage": "https://github.com/atinylittleshell/mcp-script#readme",
  "bugs": {
    "url": "https://github.com/atinylittleshell/mcp-script/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "scripting",
    "scripting-language",
    "ai",
    "llm",
    "agents",
    "agentic",
    "workflow",
    "automation",
    "llamaindex",
    "openai",
    "anthropic",
    "claude",
    "gpt"
  ],
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "mcps": "node packages/cli/bin/mcps.mjs"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "tree-sitter-cli": "^0.25.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3"
  }
}
