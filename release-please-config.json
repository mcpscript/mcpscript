{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "component": "mcpscript",
      "release-type": "node",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "skip-github-release": true,
      "changelog-path": "CHANGELOG.md"
    },
    "packages/runtime": {
      "component": "runtime",
      "release-type": "node",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "skip-changelog": true
    },
    "packages/transpiler": {
      "component": "transpiler",
      "release-type": "node",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "skip-changelog": true
    },
    "packages/cli": {
      "component": "cli",
      "release-type": "node",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "skip-changelog": true
    }
  },
  "plugins": [
    {
      "type": "node-workspace"
    },
    {
      "type": "linked-versions",
      "groupName": "mcpscript",
      "components": ["mcpscript", "runtime", "transpiler", "cli"]
    }
  ]
}
